# Set the path
if ($OSTYPE == linux) then
    setenv SYSPATH /bin/:/usr/bin/:/usr/X11R6/bin/:/usr/sbin/:/sbin/:/usr/local/bin/:$HOME/valgrind/bin/

    setenv JAVA_HOME /usr/local/java
    setenv ANT_HOME /home/bolsinga/ant/apache-ant-1.6.2
    setenv JAVAPATH $JAVA_HOME/bin/:$ANT_HOME/bin/
    alias ant ant --noconfig
else if ($OSTYPE == solaris) then
    setenv SYSPATH /usr/local/bin/:/usr/bin/:/bin:/usr/sbin/:/sbin/:/usr/X/bin:/usr/openwin/bin

    setenv JAVA_HOME /usr/local/java
    setenv ANT_HOME /home/bolsinga/ant/apache-ant-1.6.2
    setenv JAVAPATH $JAVA_HOME/bin/:$ANT_HOME/bin/
    alias ant ant --noconfig

    setenv TERM vt100
else if ($OSTYPE == darwin) then
    # MacOSX
    setenv SYSPATH /usr/local/bin/:/usr/bin/:/bin:/usr/sbin/:/sbin/:/usr/X11R6/bin:/usr/local/mysql/bin
    setenv JAVAPATH /Library/Java/Home/bin/

    # Set CVSROOT for personal MacOSX development
#    setenv CVSROOT /cvs/repository

    # Set perforce up for visual work on MacOSX
#    setenv P4DIFF /usr/local/bin/p4diff
#    setenv P4MERGE /usr/local/bin/p4merge

    setenv DISPLAY :0.0
    
    # Training!
    alias cvs "echo no CVS!"
else if ($OSTYPE == aix) then
    setenv SYSPATH /usr/local/bin/:/usr/bin/:/bin:/usr/sbin/:/sbin/:/usr/X11R6/bin
    
    setenv JAVA_HOME /usr/java14
    setenv ANT_HOME /home/bolsinga/ant/apache-ant-1.6.2
    setenv JAVAPATH $JAVA_HOME/bin/:$ANT_HOME/bin/
    alias ant ant --noconfig

    setenv TERM vt100
else if ($OSTYPE == hpux) then
    setenv SYSPATH /usr/local/bin/:/usr/bin/:/bin:/usr/sbin/:/sbin/:/usr/bin/X11
    
    setenv JAVA_HOME /opt/java1.4/
    setenv ANT_HOME /home/bolsinga/ant/apache-ant-1.6.2
    setenv JAVAPATH $JAVA_HOME/bin/:$ANT_HOME/bin/
    alias ant ant --noconfig

    setenv TERM vt100
else
    # Unknown OS (picking common options)
    setenv SYSPATH /usr/local/bin/:/usr/bin/:/bin:/usr/sbin/:/sbin/:

    setenv TERM vt100
endif

setenv PATH .:$HOME/bin/:$HOME/bin/$OSTYPE/:"$JAVAPATH":"$SYSPATH":/usr/local/scripts:

# Set csh properties
set autolist
set autologout=0

# Set the prompt
alias setprompt 'set prompt = "[%m:(`uname`):%c3] %n% "'
setprompt
alias cd 'cd \!*;setprompt'
alias pushd 'pushd \!*;setprompt'
alias popd 'popd \!*;setprompt'

# Set up perforce
setenv P4PORT perforce:1666
setenv P4CONFIG .p4rc
setenv P4USER $USER
setenv P4DIFF 'diff -uw'

setenv EDITOR emacs
